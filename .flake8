[flake8]
# Ignore specific errors common in quantitative finance
ignore = E203, E501, W503, F401, F841, E402, W391

# Max line length (should match black)
max-line-length = 88

# Exclude files/directories
exclude =
    __pycache__,
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    venv,
    env,
    .venv,
    .env,
    data/storage/*,
    output/*,
    temp/*

# Target Python version
target-version = py311